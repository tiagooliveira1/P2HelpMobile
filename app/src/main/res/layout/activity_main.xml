<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.troli.p2help.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="@color/background">
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/btnAcessaCadastrarSistema"
        android:onClick="cadastrarSistema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar sistema"
        />
    <Button
        android:id="@+id/btnAcessaListagemSistema"
        android:onClick="acessaListagemSistemas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listagem de sistemas"
        />

    <Button
        android:id="@+id/btnEncontrarPrestador"
        android:onClick="acessarListagemCursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encontrar Prestador"
        />

    <Button
        android:id="@+id/btnOfertarHoras"
        android:onClick="acessarOfertarCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ofertar Minhas Horas"
        android:background="@drawable/btn_selector"

        />

</LinearLayout>
